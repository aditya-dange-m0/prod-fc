# =============================================================================
# API KEYS - Add your actual keys here
# =============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE

# OpenRouter API Key (for multi-model access)
OPENROUTER_API_KEY=sk-or-v1-YOUR_OPENROUTER_API_KEY_HERE

# Google AI API Keys (for Gemini models)
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE
GOOGLE_GENERATIVE_AI_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Parallel Web API Key
PARALLEL_API_KEY=YOUR_PARALLEL_API_KEY_HERE

# E2B Sandbox Configuration
E2B_TEMPLATE_ID=next-fast-mongo-pre-v2
E2B_API_KEY=e2b_YOUR_E2B_API_KEY_HERE

# =============================================================================
# SUPABASE DATABASE CONFIGURATION
# =============================================================================

# Connection pooling URL (recommended for production) - Transaction mode
# Port 6543 = Pooled connection (use for application)
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres

# Direct connection URL (for migrations and table creation)
# Port 5432 = Direct connection (use for Alembic migrations)
DIRECT_DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Database connection details (alternative configuration)
DB_HOST=db.YOUR_PROJECT_REF.supabase.co
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=YOUR_SUPABASE_PASSWORD

# Database settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO_SQL=false

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME=Backend API
DEBUG=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# IMPORTANT: Change these in production!
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

EMBEDDING_ENABLED=True

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Fill in your actual API keys and database credentials
#
# 3. For Supabase database:
#    - Get DATABASE_URL from: Supabase Dashboard > Project Settings > Database
#    - Use the "Connection Pooling" URL (port 6543) for DATABASE_URL
#    - Use the "Direct Connection" URL (port 5432) for DIRECT_DATABASE_URL
#    - Replace YOUR_PASSWORD and YOUR_PROJECT_REF with actual values
#
# 4. Run migrations:
#    alembic upgrade head
#
# 5. Test database connection:
#    python test_db.py
#
# =============================================================================
